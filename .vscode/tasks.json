{
    "version": "2.0.0",
    "presentation": {
        "echo": false,
        "showReuseMessage": false
    },
    "options": {
        "cwd": "${config:zorroFolder}",
        "shell": {
            "executable": "cmd",
            "args": ["/d", "/c"]
        }
    },
    "tasks": [

        //main build tasks

        {
            "label": "x86",
            "type": "shell",
            "dependsOrder": "sequence",
            "dependsOn": [
                "delFiles",
                "compile",
                "typeLog",
                "echoDone"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
        },
        {
            "label": "x64",
            "type": "shell",
            "dependsOrder": "sequence",
            "dependsOn": [
                "delFiles",
                "compile64",
                "typeLog",
                "echoDone"
            ],
            "group": {
                "kind": "build",
            },
        },

        //seqences

        {
            "label": "compile",
            "hide": true,
            "type": "process",
            "command" : "Source\\VC++\\compile.bat",
            "args": [
                "${workspaceFolder}\\main.cpp",
                "${config:zorroFolder}\\${config:strategyFolder}\\${workspaceFolderBasename}.dll",
                "${config:msvcBuildPath}"
            ]
        },
        {
            "label": "compile64",
            "hide": true,
            "type": "process",
            "command" : "Source\\VC++\\compile64.bat",
            "args": [
                "${workspaceFolder}\\main.cpp",
                "${config:zorroFolder}\\${config:strategyFolder}\\${workspaceFolderBasename}64.dll",
                "${config:msvcBuildPath}"
            ]
        },
        {
            "label": "delFiles",
            "hide": true,
            "type": "shell",
            "command": "if exist \"${config:strategyFolder}\\${workspaceFolderBasename}.dll\" del \"${config:strategyFolder}\\${workspaceFolderBasename}.dll\" && if exist \"${config:strategyFolder}\\${workspaceFolderBasename}64.dll\" del \"${config:strategyFolder}\\${workspaceFolderBasename}64.dll\""
        },
        {
            "label": "typeLog",
            "hide": true,
            "type": "shell",
            "command": "type",
            "args": ["Log\\compiler.log"]
        },
        {
            "label": "echoDone",
            "hide": true,
            "type": "shell",
            "command": "echo",
            "args": ["================== DONE"]
        }
    ]
}