{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "presentation": {
        "echo": false,
        "showReuseMessage": false
      },
    "options": {
        "cwd": "${config:zorroFolder}",
        "env": {
            "fileName": "${workspaceFolderBasename}.dll",
            "fileName64": "${workspaceFolderBasename}64.dll"
        },
        "shell": {
            "executable": "cmd",
            "args": ["/S", "/C"]
        }
    },
    "tasks": [

        //main build tasks

        {
            "label": "x86",
            "type": "shell",
            "dependsOrder": "sequence",
            "dependsOn": [
                "echoStart",
                "delFiles",
                "compile",
                "typeLog",
                "echoDone"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
        },
        {
            "label": "x64",
            "type": "shell",
            "dependsOrder": "sequence",
            "dependsOn": [
                "echoStart",
                "delFiles",
                "compile64",
                "typeLog",
                "echoDone"
            ],
            "group": {
                "kind": "build",
            },
        },


        //seqences
        {
            "label": "compile",
            "type": "process",
            "command" : "Source\\VC++\\compile.bat",
            "args": [
                "${workspaceFolder}\\main.cpp",
                "${config:zorroFolder}\\${config:strategyFolder}\\${workspaceFolderBasename}.dll",
                "${config:vcPath}"
            ]
        },
        {
            "label": "compile64",
            "type": "process",
            "command" : "Source\\VC++\\compile64.bat",
            "args": [
                "${workspaceFolder}\\main.cpp",
                "${config:zorroFolder}\\${config:strategyFolder}\\${workspaceFolderBasename}64.dll",
                "${config:vcPath}"
            ]
        },
        {
            "label": "delFiles",
            "type": "shell",
            "command": "if exist \"${config:strategyFolder}\\${workspaceFolderBasename}.dll\" del \"${config:strategyFolder}\\${workspaceFolderBasename}.dll\" && if exist \"${config:strategyFolder}\\${workspaceFolderBasename}64.dll\" del \"${config:strategyFolder}\\${workspaceFolderBasename}64.dll\""
        },
        {
            "label": "typeLog",
            "type": "shell",
            "command": "type",
            "args":["Log\\compiler.log"]
        },
        {
            "label": "echoStart",
            "type": "shell",
            "command": "echo",
            "args":["================== START"]
        },
        {
            "label": "echoDone",
            "type": "shell",
            "command": "echo",
            "args":["================== FINISH"]
        }
    ]
}